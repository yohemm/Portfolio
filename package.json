{
  "name": "portfolio",
  "description": "Yohem VAXELAIRE's Portfolio",
  "author": "yohem",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "nodemon": "npx nodemon --exec \"npm run dev .\" ./app/**/*",
    "start": "react-router-serve ./build/server/index.js",
    "clean": "rm -rf node_modules && npm ci",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "react-router typegen && tsc",
    "test": "vitest",
    "test:ci": "vitest run",
    "prettier": "prettier . -w",
    "ci": "npm run typecheck && npm run lint && npm run test:ci",
    "format": "prettier --write \"**/*.+(tjs|tjsx|mjs|json|css|md)\""
  },
  "dependencies": {
    "@react-router/node": "^7.1.5",
    "@react-router/serve": "^7.1.5",
    "@uidotdev/usehooks": "^2.4.1",
    "isbot": "^5.1.17",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.1.5",
    "react-router-dom": "^7.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@react-router/dev": "^7.1.5",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/prettier": "^2.7.3",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^16.0.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.2",
    "react-router-devtools": "^1.1.0",
    "semantic-release": "^24.2.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.25.0",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.6"
  }
}
